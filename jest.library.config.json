{
  "setupTestFrameworkScriptFile": "<rootDir>/config/setup-jest.ts",
  "globals": {
    "__TS_CONFIG__": "tsconfig.spec.json",
    "__TRANSFORM_HTML__": true
  },
  "transform": {
    "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
  },
  "testRegex": "src\\/(?!demo).+\\/.+\\.spec\\.ts$",
  "moduleFileExtensions": [
    "ts",
    "js",
    "html",
    "json"
  ],
  "mapCoverage": true,
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!@ngrx)"
  ],
  "moduleNameMapper": {
    "^ngx-modialog$": "<rootDir>/src/ngx-modialog/src/ngx-modialog.ts",
    "^ngx-modialog/src/(.*)": "<rootDir>/src/ngx-modialog/src/$1",
    "^ngx-modialog/plugins/bootstrap$": "<rootDir>/src/ngx-modialog/plugins/bootstrap/src/bootstrap.ts",
    "^ngx-modialog/plugins/bootstrap/src/(.*)": "<rootDir>/src/ngx-modialog/plugins/bootstrap/src/$1",
    "^ngx-modialog/plugins/vex$": "<rootDir>/src/ngx-modialog/plugins/vex/src/vex.ts",
    "^ngx-modialog/plugins/vex/src/(.*)": "<rootDir>/src/ngx-modialog/plugins/vex/src/$1",
    "^ngx-modialog/plugins/js-native$": "<rootDir>/src/ngx-modialog/plugins/js-native/src/js-native.ts",
    "^ngx-modialog/plugins/js-native/src/(.*)": "<rootDir>/src/ngx-modialog/plugins/js-native/src/$1",
    "(.*)": "<rootDir>/src/$1"
  }
}
